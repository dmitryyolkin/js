<div class="login">
    <h2>Log in</h2>
    <div class="loginFailed"></div>
    <div class="credentials-place">
        <label for="login">User name:</label>
        <input type="text" id="login" value={{user.login}}>
    </div>
    <div class="credentials-place">
        <label for="pass">Password:</label>
        <input type="password" id="pass" value={{user.password}}>
    </div>

    <div class="loginControl">
        <!-- todo отображать login в одну строчку -->
        <div class="signup-place">
            <label for="rememberMe">Keep me logged in</label>
            <input type="checkbox" id="rememberMe" checked>
        </div>

        <div class="button-place">
            <input type="button" id="loginBtn" value="Log in">
        </div>
    </div>
</div>
