{{#if data.requireLogin}}
    <!-- Login if needed -->
    <div class="login">
        <h2>Log in</h2>
        <div class="userplace">
            <label for="username">User name:</label>
            <input type="text" id="username" value={{data.user.login}}>
        </div>
        <div class="userplace">
            <label for="pass">Password:</label>
            <input type="text" id="pass" value={{data.user.password}}>
        </div>
        <div class="buttonplace">
            <input type="button" value="Log in">
        </div>
    </div>
{{/if}}

<!-- run scripts -->
<script src="./components/cajon/cajon.js"></script>
<script src="./main-single.js"></script>
<script>
    //if we don't call that explicitly then main->module.exports.functions is not invoked()
    //we invoke main after DOM model is built
    require(["jquery", "main"], function ($, main) {
        $(document).ready(main);
    })
</script>
